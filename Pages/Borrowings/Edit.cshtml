@page
@model RentACar.Pages.Borrowings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Borrowing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Borrowing.ID" />
            <div class="form-group">
                <label asp-for="Borrowing.Client.FullName" class="control-label"></label>
                <select asp-for="Borrowing.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Borrowing.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrowing.Car" class="control-label"></label>
                <select asp-for="Borrowing.CarID" class="form-control" asp-items="ViewBag.CarID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Borrowing.Description" class="control-label"></label>
                <input asp-for="Borrowing.Description" readonly class="form-control" />
                <span asp-validation-for="Borrowing.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrowing.StartDate" class="control-label"></label>
                <input asp-for="Borrowing.StartDate" readonly class="form-control" />
                <span asp-validation-for="Borrowing.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrowing.ReturnDate" class="control-label"></label>
                <input asp-for="Borrowing.ReturnDate" readonly class="form-control" />
                <span asp-validation-for="Borrowing.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrowing.Price" class="control-label"></label>
                <input asp-for="Borrowing.Price" readonly class="form-control" />
                <span asp-validation-for="Borrowing.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
